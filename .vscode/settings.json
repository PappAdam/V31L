{
  // Set Prettier as the default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Enable format on save
  "editor.formatOnSave": true,

  // Configure tab width (4 spaces for this example)
  "prettier.tabWidth": 2,

  // Convert tabs to spaces
  "editor.insertSpaces": true,

  // Enable trim trailing whitespace on save
  "editor.trimAutoWhitespace": true,

  // Automatically format on paste
  "editor.formatOnPaste": true,

  // Enable word wrap
  "editor.wordWrap": "on",

  // Set the maximum number of lines before word wrapping starts
  "editor.wordWrapColumn": 80,

  // Set the default end of line to LF (Line Feed) for consistency across systems
  "files.eol": "\n",

  // Enable editor render whitespace (helps visualize spaces, tabs, etc.)
  "editor.renderWhitespace": "boundary",

  // Set the default language-specific settings (Optional)
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "codesnap.containerPadding": "10px 20px 30px 20px",
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 10px 20px",
}
